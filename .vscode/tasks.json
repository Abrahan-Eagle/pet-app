{
  "version": "2.0.0",
  "tasks": [
    // Flutter Tasks
    {
      "label": "Flutter: Get Packages",
      "type": "shell",
      "command": "flutter",
      "args": ["pub", "get"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Flutter: Clean",
      "type": "shell",
      "command": "flutter",
      "args": ["clean"],
      "group": "build"
    },
    {
      "label": "Flutter: Build APK",
      "type": "shell",
      "command": "flutter",
      "args": ["build", "apk"],
      "group": "build"
    },
    {
      "label": "Flutter: Run Tests",
      "type": "shell",
      "command": "flutter",
      "args": ["test"],
      "group": "test"
    },
    
    // Laravel Tasks
    {
      "label": "Laravel: Install Dependencies",
      "type": "shell",
      "command": "composer",
      "args": ["install"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Laravel: Clear Cache",
      "type": "shell",
      "command": "php",
      "args": ["artisan", "cache:clear"],
      "group": "build"
    },
    {
      "label": "Laravel: Run Migrations",
      "type": "shell",
      "command": "php",
      "args": ["artisan", "migrate"],
      "group": "build"
    },
    {
      "label": "Laravel: Run Tests",
      "type": "shell",
      "command": "php",
      "args": ["artisan", "test"],
      "group": "test"
    },
    {
      "label": "Laravel: Serve",
      "type": "shell",
      "command": "php",
      "args": ["artisan", "serve"],
      "group": "build",
      "isBackground": true
    },
    
    // Python Tasks
    {
      "label": "Python: Install Dependencies",
      "type": "shell",
      "command": "pip",
      "args": ["install", "-r", "requirements.txt"],
      "group": "build"
    },
    {
      "label": "Python: Run Tests",
      "type": "shell",
      "command": "python",
      "args": ["-m", "pytest"],
      "group": "test"
    },
    {
      "label": "Python: Format Code",
      "type": "shell",
      "command": "black",
      "args": ["."],
      "group": "build"
    },
    {
      "label": "Python: Lint Code",
      "type": "shell",
      "command": "flake8",
      "args": ["."],
      "group": "build"
    },
    {
      "label": "Python: Sort Imports",
      "type": "shell",
      "command": "isort",
      "args": ["."],
      "group": "build"
    },
    
    // Git Tasks
    {
      "label": "Git: Pull Latest",
      "type": "shell",
      "command": "git",
      "args": ["pull", "origin", "main"],
      "group": "build"
    },
    {
      "label": "Git: Status",
      "type": "shell",
      "command": "git",
      "args": ["status"],
      "group": "build"
    },
    {
      "label": "Git: Add All",
      "type": "shell",
      "command": "git",
      "args": ["add", "."],
      "group": "build"
    },
    {
      "label": "Git: Commit",
      "type": "shell",
      "command": "git",
      "args": ["commit", "-m", "Update"],
      "group": "build"
    }
  ]
}
